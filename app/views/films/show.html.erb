<%= render "shared/navbar" %>
<div class="main">
  <div class="filmline-left"></div>
  <div class="filmline-right"></div>

  <div class="film-detail">
    <div class="film">
      <div class="left-show">
        <%= image_tag @film.poster_image_url, class: "poster-image" %>
      </div>
      <div class="right-show">
        <div class="title-show">
          <h2><%= @film.title %></h2>
          <small class="release-date">( <%= @film.release_date %> )</small>
        </div>
        <div class="text-show">
          <p><%= @film.text %></p>
        </div>
      </div>
    </div>

    <div class="staff-section">
      <h3>スタッフ</h3>
      <% @film.staffs.each do |staff| %>
        <p><%= staff.name %>: <%= staff.role %></p>
      <% end %>
    </div>

    <div class="cast-section">
      <h3>キャスト</h3>
      <% @film.casts.each do |cast| %>
        <p><%= cast.name %>: <%= cast.role %></p>
      <% end %>
    </div>

    <div class="production-section">
      <h3>制作会社</h3>
      <% @film.production_companies.each do |company| %>
        <p><%= company.name %></p>
      <% end %>
    </div>
  </div>
</div>