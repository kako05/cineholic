<div class="film">
  <div class="left-show">
    <%= image_tag film.poster_image_url, class: "poster-image" %>
  </div>
  <div class="right-show">
    <div class="title-show">
      <h2><%= film.title %></h2>
      <span class="release-date"><%= film.release_date %></span>
    </div>
    <div class="text-show">
      <p><%= film.description %></p>
    </div>
  </div>
</div>